// Sidebar Theme Specific Styles
// ===========================================================================

// Sidebar Container
// ---------------------------------------------------------------------------

{
  "class": "sidebar_container",
  "layer0.tint": [<%= ui.background.primary.rgb %>]
},

// Sidebar Tree
// ---------------------------------------------------------------------------

//
// Sidebar Tree Defaults
//

{
  "class": "sidebar_tree",
  "layer0.tint": [<%= ui.background.primary.rgb %>]
},

//
// Sidebar Tree Row
//

{
  "class": "tree_row",
  "layer0.tint": [<%= ui.background.secondary.rgb %>]
},

// Sidebar Labels
// ---------------------------------------------------------------------------

//
// Sidebar Heading
//

{
  "class": "sidebar_heading",
  "color": [<%= ui.foreground.primary.rgb %>]
},

//
// Sidebar Entry
//

{
  "class": "sidebar_label",
  "color": [<%= ui.foreground.primary.rgb %>]
},

{
  "class": "sidebar_label",
  "parents": [{"class": "tree_row", "attributes": ["selected"]}],
  "color": [<%= ui.foreground.selected.rgb %>, 255],
  "shadow_color": [<%= ui.foreground.shadow.rgb %>, 127],
  "shadow_offset": [0, 1]
},
