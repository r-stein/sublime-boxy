<% for (var i = 0; i < ui.accents.length; i++) { %>
// Tabs <%= ui.accents[i].name %> Accent
// ===========================================================================

// Tab
// ---------------------------------------------------------------------------

//
// Underlined
//

{
  "class": "tab_control",
  "settings": ["theme_otto_tab_selected_underlined"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer3.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/tabs/tab_selected_underlined.png"
},

//
// Prelined
//

{
  "class": "tab_control",
  "settings": ["theme_otto_tab_selected_prelined"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer3.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/tabs/tab_selected_prelined.png"
},

//
// Filled
//

{
  "class": "tab_control",
  "settings": ["theme_otto_tab_selected_filled"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer3.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/tabs/tab_selected_filled.png"
},

// Close

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected"]}],
  "settings": ["theme_otto_tab_selected_filled"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer0.texture": "Theme - Otto/assets/global/variants/dark/buttons/button_close.png"
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected"]}],
  "settings": ["theme_otto_tab_selected_filled"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "attributes": ["hover"],
  "layer0.opacity": 1.0
},

// Dirty

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected", "dirty"]}],
  <% if (ui.accents[i].id != "blue") { %>"settings": ["theme_otto_accent_<%= ui.accents[i].id %>"],<% } %>
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/buttons/button_dirty_selected.png",
  "layer0.opacity": 1.0
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected", "dirty"]}],
  <% if (ui.accents[i].id != "blue") { %>"settings": ["theme_otto_accent_<%= ui.accents[i].id %>"],<% } %>
  "attributes": ["hover"],
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/buttons/button_dirty_close_selected.png",
  "layer0.opacity": 1.0
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["dirty", "selected"]}],
  "settings": ["theme_otto_tab_selected_filled"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer0.texture": "Theme - Otto/assets/global/variants/dark/buttons/button_dirty.png",
  "layer0.opacity": 1.0
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["dirty", "selected"]}],
  "attributes": ["hover"],
  "settings": ["theme_otto_tab_selected_filled"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer0.texture": "Theme - Otto/assets/global/variants/dark/buttons/button_close.png",
  "layer0.opacity": 1.0
},
<% } %>
