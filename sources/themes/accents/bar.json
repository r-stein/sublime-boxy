// Grid Border Color
// ---------------------------------------------------------------------------

<% for (var i = 0; i < ui.accents.length; i++) { %>
{
  "class": "grid_layout_control",
  "settings": ["theme_bar_colored"<% if (ui.accents[i].id != "blue") { %>, "theme_accent_<%= ui.accents[i].id %>"<% } %>],
