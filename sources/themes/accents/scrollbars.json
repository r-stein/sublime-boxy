<% for (var i = 0; i < ui.accents.length; i++) { %>
// Scrollbars <%= ui.accents[i].name %> Accent
// ===========================================================================

// Scrollbar
// ---------------------------------------------------------------------------

//
// Vertical Scrollbar Puck
//

{
  "class": "puck_control",
  <% if (ui.accents[i].id != "blue") { %>"settings": ["theme_otto_accent_<%= ui.accents[i].id %>"],<% } %>
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/scrollbars/puck_vertical.png"
},

{
  "class": "puck_control",
  "settings": ["theme_otto_scrollbars_wide"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/scrollbars/puck_vertical_wide.png"
},

//
// Horizontal Scrollbar Puck
//

{
  "class": "puck_control",
  <% if (ui.accents[i].id != "blue") { %>"settings": ["theme_otto_accent_<%= ui.accents[i].id %>"],<% } %>
  "attributes": ["horizontal"],
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/scrollbars/puck_horizontal.png"
},

{
  "class": "puck_control",
  "settings": ["theme_otto_scrollbars_wide"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "attributes": ["horizontal"],
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/scrollbars/puck_horizontal_wide.png"
},

// Scrollbar Overlayed
// ---------------------------------------------------------------------------

//
// Vertical Scrollbar Puck
//

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/scrollbars/puck_vertical_overlay.png"
},

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars", "theme_otto_scrollbars_wide"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/scrollbars/puck_vertical_overlay_wide.png"
},

//
// Horizontal Scrollbar Puck
//

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "attributes": ["horizontal"],
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/scrollbars/puck_horizontal_overlay.png"
},

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars", "theme_otto_scrollbars_wide"<% if (ui.accents[i].id != "blue") { %>, "theme_otto_accent_<%= ui.accents[i].id %>"<% } %>],
  "attributes": ["horizontal"],
  "layer0.texture": "Theme - Otto/assets/global/accents/<%= ui.accents[i].id %>/scrollbars/puck_horizontal_overlay_wide.png"
},
<% } %>
